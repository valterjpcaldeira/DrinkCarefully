<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingTop="40dp"
    android:background="@drawable/fundoresult">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"></TableRow>

    <ImageView
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/redlightnew"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Não Conduza! Espere!"
        android:id="@+id/textoAviso"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.26"
        android:textStyle="bold"
        android:textColor="#d7c7191e"
        android:textSize="40dp"
        android:gravity="center" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tempo a esperar:"
            android:id="@+id/textView13"
            android:textSize="25dp"
            android:textColor="#ff000000"
            android:layout_weight="0.08"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/time"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:layout_weight="0.92"
            android:text="2"
            android:clickable="false"
            android:gravity="center" />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/oi"
        android:focusableInTouchMode="false" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Álcool:"
            android:id="@+id/textView9"
            android:textSize="25dp"
            android:textColor="#ff000000"
            android:layout_weight="0.43"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/id_alcool"
            android:textSize="30dp"
            android:textColor="#ff000000"
            android:layout_weight="0.24"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="mg/100 ml"
            android:id="@+id/textView20"
            android:textSize="20dp"
            android:textColor="#ff120800"
            android:layout_weight="0.22" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.29">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="58dp"
                android:id="@+id/taxiButton"
                android:background="@drawable/taxi"
                android:layout_marginLeft="50dp" />

            <com.facebook.share.widget.ShareButton
                android:layout_width="89dp"
                android:layout_height="38dp"
                android:id="@+id/share"
                android:layout_marginRight="50dp"
                android:layout_weight="0.06" />

        </LinearLayout>
    </TableRow>

</LinearLayout>