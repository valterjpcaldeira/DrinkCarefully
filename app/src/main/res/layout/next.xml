<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:id="@+id/scrollView1"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    style="@style/AppTheme"
    android:background="@drawable/fundo"
    android:id="@+id/fund">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Que bebidas consumiu?"
        android:id="@+id/text"
        android:layout_weight="0.05"
        android:textSize="27dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:autoText="false" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tempo desde a última bebida:"
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="0.41"
            android:layout_marginLeft="15dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/horas"
            android:maxLength="2"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="h"
            android:id="@+id/textView14"
            android:gravity="bottom"
            android:layout_marginBottom="3dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/minutos"
            android:maxLength="2"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="m"
            android:id="@+id/textView11"
            android:gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_weight="0.41" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.30"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/c">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/cerveja_transp"
            android:layout_marginLeft="17dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cerveja (5º) - 0,33L"
            android:id="@+id/textView6"
            android:layout_weight="0.26"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/cerveja_qtd"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/adeus">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            android:src="@drawable/vinho_transp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vinho (12º) - 0,17L"
            android:id="@+id/oi"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="0.01"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="65dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/vinho_qtd"
            android:layout_weight="0.00"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/champanhe_transp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Champanhe (14º) - 0,11L"
            android:id="@+id/textView15"
            android:layout_weight="0.27"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="10dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/champanheQ"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:src="@drawable/vodka_transp"
            android:layout_marginLeft="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vodka (35º) - 0,04L"
            android:id="@+id/textView16"
            android:layout_weight="0.27"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="40dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/vodkaQ"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/gin_transp"
            android:layout_marginLeft="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rum, Gin (43º) - 0,03L"
            android:id="@+id/textView17"
            android:layout_weight="0.27"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginRight="15dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/rumQ"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/aguardente_transp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Aguardente (44º) - 0,025L"
            android:id="@+id/textView18"
            android:layout_weight="0.27"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginLeft="14dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/aguardenteQ"
            android:maxLength="2"
            android:layout_marginRight="30dp"
            android:gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/whisky_transp"
            android:layout_marginLeft="17dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Whisky (45º) - 0,10L"
            android:id="@+id/textView10"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="0.80"
            android:layout_marginRight="35dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/beb_branca_qtd"
            android:gravity="center"
            android:maxLength="2"
            android:layout_marginRight="28dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/bug">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/absinto_transp"
            android:layout_marginLeft="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Absinto (52º) - 0,025L"
            android:id="@+id/textView19"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="0.97"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/absuntoQ"
            android:gravity="center"
            android:maxLength="2"
            android:layout_marginRight="28dp" />
    </TableRow>

    <Button
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/calculate"
        android:layout_gravity="right"
        android:layout_weight="0.05"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp" />

</LinearLayout>

</ScrollView>